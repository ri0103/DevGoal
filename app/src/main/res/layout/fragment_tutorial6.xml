<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutorial.Tutorial6Fragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/ricty_diminished_bold"
            android:text="サイトをブックマーク"
            android:textSize="28sp"/>

        <ImageView
            android:id="@+id/tutorial3ImageView"
            android:layout_width="360sp"
            android:layout_height="360sp"
            android:layout_margin="32sp"
            android:layout_marginBottom="24sp"
            android:src="@drawable/tutorial_screenshot_6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="右側のブックマークタブから\n参考になるサイトを\nブックマークできます"
            android:textAlignment="center"
            android:fontFamily="@font/ricty_diminished_regular"
            android:textSize="24sp"/>

    </LinearLayout>

</FrameLayout>