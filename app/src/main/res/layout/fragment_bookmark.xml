<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BookmarkFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmarkRecyclerview"
        android:layout_margin="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/openAddBookmarkActivityButton"
        app:icon="@drawable/ic_baseline_add_24"
        android:text="追加"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/mplus_rounded_regular"
        android:textSize="18sp"
        android:padding="8sp"
        android:layout_margin="12sp"/>

    <FrameLayout
        android:id="@+id/bookmark_detail_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="18sp"
        android:layout_marginLeft="18sp"
        android:layout_marginTop="64sp"
        android:layout_marginBottom="64sp"
        />

    <FrameLayout
        android:id="@+id/add_bookmark_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4sp"
        android:layout_marginLeft="4sp"
        android:layout_marginBottom="24sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>