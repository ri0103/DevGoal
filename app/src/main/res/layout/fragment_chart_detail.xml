<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chartDetailFragmentFrameLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ChartDetailFragment"
    android:clickable="true"
>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        app:cardCornerRadius="24sp"
        android:layout_margin="12sp"
        android:elevation="12sp"
        app:strokeWidth="4sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24sp"
        >

        <ImageButton
            android:id="@+id/closeChartDetailFragmentButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="12sp"
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:background="@drawable/ic_baseline_close_24"/>

        <TextView
            android:id="@+id/detailDateTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="〇〇/〇〇"
            android:textSize="32sp"
            android:fontFamily="@font/mplus_rounded_bold"/>


        <TextView
            android:id="@+id/commitHistoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="コミット履歴"
            android:fontFamily="@font/mplus_rounded_medium"
            app:layout_constraintBottom_toTopOf="@id/commitRecyclerCardView"
            app:layout_constraintRight_toRightOf="@id/commitRecyclerCardView"
            app:layout_constraintLeft_toLeftOf="@id/commitRecyclerCardView"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/commitRecyclerCardView"
            app:layout_constraintTop_toBottomOf="@id/commitHistoryTextView"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="160sp"
            android:layout_height="80sp"
            app:strokeWidth="0sp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/chartDetailCommitRecyclerView" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/timePieChartsContainer"
            app:layout_constraintTop_toBottomOf="@id/detailDateTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <com.github.mikephil.charting.charts.PieChart-->
<!--                android:id="@+id/detailTimePieChart"-->
<!--                android:layout_width="240sp"-->
<!--                android:layout_height="240sp"/>-->

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="12sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日の開発時間"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/mplus_rounded_regular"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/dayTimeLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1分"
                android:fontFamily="@font/mplus_rounded_regular"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12sp"
                android:textSize="32sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>