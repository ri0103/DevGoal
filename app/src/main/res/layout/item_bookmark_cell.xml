<?xml version="1.0" encoding="utf-8"?>


<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_3"
        app:cardElevation="6sp"
        android:backgroundTint="@color/design_default_color_surface"
        android:clickable="true"
        android:layout_margin="6sp"
        android:padding="6sp"
        app:cardCornerRadius="18sp"
        >

        <LinearLayout
            android:id="@+id/bookmarkCell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/urlTextView"
                android:fontFamily="@font/ricty_diminished_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:padding="8sp"/>


            <ImageView
                android:id="@+id/urlImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/memoTextView"
                android:fontFamily="@font/ricty_diminished_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="8sp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</com.facebook.shimmer.ShimmerFrameLayout>


